<div class="row">
  <div class="offset-sm-1 col-sm-10 mt-4 mb-4">
    <%= render 'discussions/discussions', discussions: @show_discussion %>
  </div>
  <div class="col-sm-6 offset-sm-3 mb-5">
    <%= form_with(model: @discussion, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: @discussion %>
      <div class="form-group">
        <%= f.label :assent_comment, '納得コメント' %>
        <%= f.text_area :assent_comment, class: 'form-control', rows: 5, required: true, placeholder: '納得した理由・学び等をご記入ください（500字以内）' %>
      </div>
      <%= f.submit '発言募集を終了し納得する！', class: 'btn btn-primary btn-block rounded-pill' %>
    <% end %>
  </div>
</div>
