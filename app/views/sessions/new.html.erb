<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="text-center mt-3 mb-4">
    <%= link_to '/auth/twitter', class: 'btn btn-sm btn-info mr-2 d-inline' do %>
        <i class="fab fa-twitter mr-1"></i>Twitterアカウントでログイン
    <% end %>
    <%= link_to '/auth/google_oauth2', class: 'btn btn-sm btn-danger d-inline' do %>
        <i class="fab fa-google mr-1"></i>Googleアカウントでログイン
    <% end %>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3 mb-5">

    <%= form_with(url: login_path, scope: :session, local: true, class: 'form-signin') do |f| %>

      <%= f.label :email, 'メールアドレス', class: "sr-only" %>
      <%= f.email_field :email, class: 'form-control login-form-top', required: true, placeholder: 'メールアドレス' %>

      <%= f.label :password, 'パスワード',  class: "sr-only" %>
      <%= f.password_field :password, class: 'form-control login-form-bottom', required: true, placeholder: 'パスワード' %>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block rounded-pill' %>
    <% end %>
  </div>
</div>
